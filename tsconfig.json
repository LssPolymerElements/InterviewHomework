{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["types"]
  },
  "compileOnSave": true,
  "include": [
    "bower_components/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "es5-build",
    "node_modules",
    "bower_components/reflect-metadata/",
    "bower_components/**/test/*",
    "bower_components/**/demo/*"
  ]
}